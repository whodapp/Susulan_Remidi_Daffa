<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:backgroundTint="#7FFFD4"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/GambarBadgePmr"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:contentDescription="Team badge"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNamaTimPmr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222" />

            <TextView
                android:id="@+id/tvStadiumPmr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Stadion"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvidTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id Team"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222" />

            <TextView
                android:id="@+id/tvstrLeague4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UEFA"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222" />

            <TextView
                android:id="@+id/tvstrLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="strLocation"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>